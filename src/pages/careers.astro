---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Layout from "../layouts/Layout.astro";
import "@/styles/globals.css";
import ScootToday from "@/components/ScootToday.astro";
---

<Layout title="Frontend Mentor | Scoot">
  <!-- THE HEADER -->
  <Header />
  <main class="overflow-hidden">
    <!-- THE TITLE -->
    <section class="relative overflow-hidden">
      <picture>
        <source
          media="(min-width:1440px )"
          srcset="/images/images/careers-locations-hero-desktop.jpg"
        />
        <source
          media="(min-width:768px )"
          srcset="/images/images/careers-locations-hero-tablet.jpg"
        />
        <img
          src="/images/images/careers-location-hero-mobile.jpg"
          alt=""
          class=""
        />
      </picture>
      <div class="">
        <h1
          class="bg-[#2F3B59]/-25 absolute top-0 flex h-40 w-full items-center justify-center font-SpaceMono text-[2.5rem] font-bold leading-10 tracking-[-0.11163rem] text-white md:h-[12.5rem] md:pl-[6.06rem] md:text-[3.5rem] md:leading-[3.5rem] md:tracking-[-0.15625rem] md:max-2xl:items-center md:max-2xl:justify-start md:max-2xl:text-left xl:pl-[10.31rem]"
        >
          Careers
        </h1>
        <img
          src="/images/patterns/white-circles.svg"
          alt=""
          class="absolute right-[-30px] top-[70px] hidden md:max-2xl:flex"
        />
      </div>
    </section>
    <!-- JOIN OUR MISSION -->
    <section
      class="relative mb-[7.5rem] mt-20 flex flex-col items-center gap-16 md:ml-[2.44rem] md:mr-10 md:mt-24 xl:mx-[10.31rem] xl:mb-[11.62rem] xl:flex-row-reverse xl:gap-[13.31rem]"
    >
      <img
        src="/images/images/join-us.jpg"
        alt=""
        class="w-[19.74325rem] rounded-full md:w-[28.25rem]"
      />
      <img
        src="/images/patterns/circle.svg"
        alt=""
        class="absolute hidden md:right-[-25rem] md:max-2xl:flex xl:right-[-31.31rem]"
      />
      <img
        src="/images/patterns/left-downward-arrow.svg"
        alt=""
        class="absolute hidden md:right-[-2rem] md:top-[18.5rem] md:max-2xl:flex xl:right-[-10.31rem] xl:top-[19rem]"
      />
      <div
        class="mx-8 flex flex-col items-center justify-center gap-8 text-center xl:items-start xl:gap-6 xl:text-left"
      >
        <h2
          class="w-[19.4375rem] font-SpaceMono text-[2rem] font-bold leading-8 tracking-[-0.08931rem] text-[#495567] md:w-[28.5625rem] md:text-[3rem] md:leading-[3rem] md:tracking-[-0.13394rem] xl:w-[27.8125rem]"
        >
          Care to join our mission?
        </h2>
        <p
          class="w-[19.4375rem] font-LexendDeca text-[0.9375rem] font-normal leading-[1.5625rem] text-[#939CAA] md:w-[35.8125rem] xl:w-[27.8125rem]"
        >
          We&#39;re always looking for ambitious individuals to help us on our
          journey. If you&#39;re passionate about our mission to provide clean,
          accessible transport to improve urban living we want to hear from you!
        </p>
        <a
          href=""
          class="flex h-[3.3125rem] w-[11.25rem] items-center justify-center bg-[#FCB72B] font-SpaceMono text-[0.9375rem] font-bold leading-[1.5625rem] text-white transition-all duration-300 ease-in hover:border-[3px] hover:border-solid hover:border-[#FCB72B] hover:bg-transparent hover:text-[#FCB72B] xl:mt-4"
          >Say Hello</a
        >
      </div>
    </section>
    <!-- WHY JOIN US -->
    <section
      class="mx-8 flex flex-col items-center justify-center gap-14 text-center md:ml-[2.44rem] md:mr-10 md:gap-[5.55rem] xl:mx-[10.31rem]"
    >
      <h2
        class="w-[19.4375rem] font-SpaceMono text-[2rem] font-bold leading-8 tracking-[-0.08931rem] text-[#495567] md:w-[28.5625rem] md:text-[3rem] md:leading-[3rem] md:tracking-[-0.13394rem] xl:w-[33.75rem]"
      >
        Why join us?
      </h2>
      <!-- REASONS WARPPER -->
      <div
        class="flex flex-col items-center justify-center gap-[2.88rem] text-center xl:flex-row xl:items-center xl:justify-between"
      >
        <!-- OUR TECH  -->
        <div class="flex flex-col items-center justify-center gap-12">
          <!-- IMG & NUM 1 -->
          <div class="relative">
            <img
              src="/images/images/our-tech.jpg"
              alt=""
              class="w-[16.1875rem] rounded-full"
            />
            <h2
              class="absolute bottom-[-31px] left-[78px] flex size-24 items-center justify-center rounded-full bg-[#FCB72B] font-SpaceMono text-2xl font-bold leading-7 tracking-[-0.06694rem] text-[#495567]"
            >
              01
            </h2>
          </div>
          <!-- TEXT -->
          <div class="flex flex-col gap-[1.69rem]">
            <h3
              class="w-[19.4375rem] font-SpaceMono text-2xl font-bold leading-7 tracking-[-0.06694rem] text-[#495567] md:w-[28.5625rem] xl:w-[21.875rem]"
            >
              Our tech
            </h3>
            <p
              class="w-[19.4375rem] font-LexendDeca text-[0.9375rem] font-normal leading-[1.5625rem] text-[#939CAA] md:w-[28.5625rem] xl:w-[21.875rem]"
            >
              We&#39;re using cutting edge technology to drive accessible urban
              transportation forward. Our fully electric scooters are a joy to
              ride!
            </p>
          </div>
        </div>
        <!-- Our integrity  -->
        <div class="flex flex-col items-center justify-center gap-12">
          <!-- IMG & NUM  -->
          <div class="relative">
            <img
              src="/images/images/our-integrity.jpg"
              alt=""
              class="w-[16.1875rem] rounded-full"
            />
            <h2
              class="absolute bottom-[-31px] left-[78px] flex size-24 items-center justify-center rounded-full bg-[#FCB72B] font-SpaceMono text-2xl font-bold leading-7 tracking-[-0.06694rem] text-[#495567]"
            >
              02
            </h2>
          </div>
          <!-- TEXT -->
          <div class="flex flex-col gap-[1.69rem]">
            <h3
              class="w-[19.4375rem] font-SpaceMono text-2xl font-bold leading-7 tracking-[-0.06694rem] text-[#495567] md:w-[28.5625rem] xl:w-[21.875rem]"
            >
              Our integrity
            </h3>
            <p
              class="w-[19.4375rem] font-LexendDeca text-[0.9375rem] font-normal leading-[1.5625rem] text-[#939CAA] md:w-[28.5625rem] xl:w-[21.875rem]"
            >
              We are fully committed to deliver a great yet safe, sustainable
              micro-mobility experience in every city we serve.
            </p>
          </div>
        </div>
        <!-- Our community  -->
        <div class="flex flex-col items-center justify-center gap-12">
          <!-- IMG & NUM  -->
          <div class="relative">
            <img
              src="/images/images/our-community.jpg"
              alt=""
              class="w-[16.1875rem] rounded-full"
            />
            <h2
              class="absolute bottom-[-31px] left-[78px] flex size-24 items-center justify-center rounded-full bg-[#FCB72B] font-SpaceMono text-2xl font-bold leading-7 tracking-[-0.06694rem] text-[#495567]"
            >
              03
            </h2>
          </div>
          <!-- TEXT -->
          <div class="flex flex-col gap-[1.69rem]">
            <h3
              class="w-[19.4375rem] font-SpaceMono text-2xl font-bold leading-7 tracking-[-0.06694rem] text-[#495567] md:w-[28.5625rem] xl:w-[21.875rem]"
            >
              Our community
            </h3>
            <p
              class="w-[19.4375rem] font-LexendDeca text-[0.9375rem] font-normal leading-[1.5625rem] text-[#939CAA] md:w-[28.5625rem] xl:w-[21.875rem]"
            >
              We support every community we serve. All workers are paid a living
              wage based on their location and are Scoot employees.
            </p>
          </div>
        </div>
      </div>
    </section>
    <!-- LISTED JOBS -->
    <section class="mx-8 md:ml-[2.44rem] md:mr-10 xl:mx-[10.31rem]">
      <div class="|">
        <h2 class="">General Manager</h2>
        <h3 class="">Jakarta, Indonesia</h3>
        <a href="" class="">Apply</a>
      </div>

      <div class="">
        <h2 class="">UI/UX Designer</h2>
        <h3 class="">Yokohama, Japan</h3>
        <a href="" class="">Apply</a>
      </div>

      <div class="">
        <h2 class="">Blog Content Copywriter</h2>
        <h3 class="">New York, United States</h3>
        <a href="" class="">Apply</a>
      </div>

      <div class="">
        <h2 class="">Graphic Designer</h2>
        <h3 class="">New York, United States</h3>
        <a href="" class="">Apply</a>
      </div>

      <div class="">
        <h2 class="">Fleet Supervisor</h2>
        <h3 class="">Jakarta, Indonesia</h3>
        <a href="" class="">Apply</a>
      </div>

      <div class="">
        <h2 class="">UX Analyst</h2>
        <h3 class="">London, United Kingdom</h3>
        <a href="" class="">Apply</a>
      </div>
    </section>
    <!-- SIGN IN & SCOOT TODAY -->
    <ScootToday />
  </main>
  <!-- THE FOOTER -->
  <Footer />
</Layout>
